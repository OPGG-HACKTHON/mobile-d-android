<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="dialog_chat_option"
            type="android.app.Dialog" />
    </data>

    <LinearLayout
        android:id="@+id/layout_chat_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_chat_option_update"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:text="옵션수정"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_chat_option_exit"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="나가기"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_chat_option_cancel"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/floating_background"
            android:text="닫기"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:backgroundTint="@null" />
    </LinearLayout>
</layout>